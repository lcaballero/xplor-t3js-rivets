extends ../layouts/default.jade

block main

  .main(data-module="config-ctrl")
    header
      .container
        h1
          | Data Indexer Configuration

    .container
      .flex-container
        .flex-columns-4
          nav.frame
            ul
              li(rv-each-name="containers")
                div { name }
                aside

        .flex-columns-8
          div.group
            div
              header
                | { name }
              table.fields
                tbody
                  tr(rv-each-field="fields")
                    td
                      label { field.fieldDisplay }
                    td
                      input(rv-value='field.value', type='text', rv-on-keypress="keypress")
