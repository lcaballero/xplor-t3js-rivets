slide-panel.left-to-right
  width 0
  height 400px
  background-color #fcc
  position relative

  &.show
    width 200px
    > div
      display inline-block
    .icon-plus
      display none


  > div
    display none
    padding 10px

  .rotate
    transform rotate(-90deg)
    position absolute
    right -40px
    top 16px
    background-color black
    color white
    line-height 14px
    padding-top 4px
    padding-left 8px
    padding-right 20px
    padding-bottom 7px
    cursor pointer

    .icon-plus, .icon-minus
      position absolute
      right 3px
      top 6px


  & + .content
    margin-left 20px

